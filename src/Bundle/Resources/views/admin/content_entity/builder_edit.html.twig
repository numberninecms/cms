{% trans_default_domain 'numbernine' %}
{% extends '@NumberNine/admin/base.html.twig' %}

{% block title %}{{ '%1% edition: %2%'|trans({
    '%1%': content_type.labels.singularName|capitalize,
    '%2%': entity.title,
}) }}{% endblock %}

{% block active_menu_url %}{{ path('numbernine_admin_content_entity_index', {type: type_slug}) }}{% endblock %}

{% block topbar_center_menu %}
    {% include '@NumberNine/admin/util/page_builder/page_builder_topbar_menu.html.twig' %}
{% endblock %}

{% block content %}
    {% include '@NumberNine/admin/util/page_builder/page_builder_frame.html.twig' with {
        frontend_url: N9_entity_url(entity) ~ '?n9=admin',
        components_api_url: path('numbernine_admin_pagebuilder_entity_get_components', {id: entity.id}),
    } %}
{% endblock %}
