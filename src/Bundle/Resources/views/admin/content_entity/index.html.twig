{% trans_default_domain 'numbernine' %}
{% extends '@NumberNine/admin/base.html.twig' %}

{% block content %}
    <div class="flex flex-col">
        {% include '@NumberNine/admin/layout/toolbar.html.twig' with {title: content_type.labels.pluralName|capitalize} %}
        {% include '@NumberNine/admin/util/flashes.html.twig' %}

        <div class="tabs-toolbar">
            <div class="tabs">
                <a href="{{ path('numbernine_admin_content_entity_index', {type: type_slug}) }}" class="active">
                    <span>{{ 'All'|trans }}</span>
                </a>
                <a href=""><span>{{ 'Published'|trans }}</span></a>
                <a href=""><span>{{ 'Trash'|trans }}</span></a>
            </div>
            <div>
                <label class="border border-color-secondary border-0 border-bottom">
                    <input type="text" placeholder="Filter">
                    <i class="fa fa-search" class=""></i>
                </label>
            </div>
        </div>

        {% for entity in entities %}
            {{ entity.title }}
        {% endfor %}
    </div>
{% endblock %}
