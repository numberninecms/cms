{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div
            class="flash-{{ label }}"
            data-controller="dismiss autodismiss"
            data-dismiss-target="item"
            data-autodismiss-target="item"
        >
            <div class="py-3 px-3">
                <div class="flex items-center justify-between flex-wrap">
                    <div class="w-0 flex-1 flex items-center">
                        <p class="font-medium text-white">
                            {{ message }}
                        </p>
                    </div>
                    <div class="order-2 flex-shrink-0 sm:order-3 mr-3">
                        <button
                            type="button"
                            class="-mr-1 flex p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-white sm:-mr-2 text-white"
                            data-action="click->dismiss#dismiss"
                        >
                            <span class="sr-only">Dismiss</span>
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
