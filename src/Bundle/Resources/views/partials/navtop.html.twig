{% trans_default_domain 'numbernine' %}
<nav class="n9-topbar" id="n9-adminbar">
    <div class="n9-topbar-title">
        <a href="{{ path('numbernine_homepage') }}">
            <img src="{{ asset('bundles/numbernine/build/images/NumberNineWithoutText.png', 'numbernine') }}"
                 alt="Homepage" width="25">
        </a>
    </div>
    <div class="n9-topbar-burger-wrapper">
        <button class="n9-topbar-burger">
            <svg class="n9-topbar-burger-svg" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
            </svg>
        </button>
    </div>
    <div class="n9-topbar-menu">
        <div>
            <a href="{{ path('numbernine_homepage') }}">{{ 'Home'|trans }}</a>
            <a href="/admin/" target="_blank">{{ 'Dashboard'|trans }}</a>
            {% if entity %}
                <a href="{{ N9_entity_admin_url(entity) }}" target="_blank">{{ 'Edit %1%'|trans({'%1%': entity.type}) }}</a>
            {% endif %}
        </div>
        <div>
            <a href="{{ path('numbernine_logout') }}">{{ 'Logout'|trans }}</a>
        </div>
    </div>
</nav>
