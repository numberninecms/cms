{
    "compilerOptions": {
        "rootDir": ".",
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "strictPropertyInitialization": false,
        "paths": {
            "src/*": [
                "assets/ts/*",
                "assets/*"
            ]
        },
        "types": [
            "node",
            "webpack-env"
        ]
    },
    "include": [
        "assets/ts/**/*",
        "assets/**/*"
    ],
    "exclude": [
        "/build",
        "node_modules"
    ]
}
