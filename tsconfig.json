{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "strictPropertyInitialization": false,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "admin/*": [
                "assets/ts/admin/*",
            ],
            "styles/*": [
                "assets/scss/*",
            ],
            "images/*": [
                "assets/images/*",
            ],
            "assets/*": [
                "assets/*",
            ]
        },
        "types": [
            "node",
            "webpack-env"
        ],
        "lib": ["esnext", "dom", "dom.iterable"]
    },
    "include": [
        "assets/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
