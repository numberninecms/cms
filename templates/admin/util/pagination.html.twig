{% if paginator.lastPage > 1 %}
    <div class="pagination">
        {% for page in 1..paginator.lastPage %}
            <a
                class="page {% if page == currentPage %}active{% endif %}"
                href="{{ url|replace({'__page__': page}) }}"
            >
                {{ page }}
            </a>
        {% endfor %}
    </div>
{% endif %}
