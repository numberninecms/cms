<div
    class="flash-{{ label ?? '' }} sticky top-0"
    data-controller="dismiss autodismiss flash"
    {% if not (show is defined and show == true) %}
        style="display: none"
    {% endif %}
>
    <div class="py-3 px-3">
        <div class="flex items-center justify-between flex-wrap">
            <div class="w-0 flex-1 flex items-center">
                <p class="font-medium text-white" data-flash-target="message">
                    {{ message ?? '' }}
                </p>
            </div>
            <div class="order-2 flex-shrink-0 sm:order-3 mr-3">
                <button
                    type="button"
                    class="-mr-1 flex p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-white sm:-mr-2 text-white"
                    data-action="dismiss#dismiss"
                >
                    <span class="sr-only">Dismiss</span>
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>
