{% set attributes = (attr ?? {})|merge({
    href: item.route ? path(item.route) : item.link ? item.link,
    class: 'menu-item-level-' ~ level,
}) %}
<a {{ N9_create_attributes(attributes) }} data-layout--menu-target="menuItem">
    <div class="space-x-3">
        {% if item.icon %}
            {% if item.icon starts with 'mdi-' %}
                {% set icon = 'mdi mdi-16px ' ~ item.icon %}
            {% else %}
                {% set icon = 'fa fa-' ~ item.icon %}
            {% endif %}
            <i class="{{ icon }}"></i>
        {% endif %}
        <span>{{ item.text }}</span>
    </div>
    {% if item.children|length > 0 %}
        <i class="fa fa-sort-down"></i>
    {% endif %}
</a>
